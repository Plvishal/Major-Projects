<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h3>Create New Listing</h3>
      <form
        action="/listings"
        method="POST"
        class="form_c needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <!-- name='listing[]'  -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Name should be valid</div>
          <div class="valid-feedback">Name looks good</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            id=""
            cols="30"
            rows="2"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Description should be valid</div>
          <div class="valid-feedback">Description looks good</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
          />
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            min="0"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price should be number</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              class="form-control"
              placeholder="enter location"
              required
            />
            <div class="invalid-feedback">Location should be valid</div>
            <div class="valid-feedback">Location looks good</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              class="form-control"
              placeholder="enter country"
              required
            />
            <div class="invalid-feedback">Country should be valid</div>
            <div class="valid-feedback">Country looks good</div>
          </div>
        </div>
        <br />
        <div class="mb-3">
          <button class="btn btn-dark add-btn">Add</button>
        </div>
      </form>
      <br />
    </div>
  </div>
</body>
